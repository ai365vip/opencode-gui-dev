{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "OpenCode GUI: Run (Extension Host)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js", "${workspaceFolder}/dist/**/*.cjs"]
    },
    {
      "name": "OpenCode GUI: Run Dev (Vite)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js", "${workspaceFolder}/dist/**/*.cjs"],
      "env": {
        "VITE_DEV_SERVER_URL": "http://localhost:5174",
        "VITE_DEV_PORT": "5174"
      }
    }
  ]
}
